{:paths ["src"]
 :mvn/repos {"central" {:url "https://repo1.maven.org/maven2/"}
             "clojars" {:url "https://clojars.org/repo/"}}
 :deps
 {}

 :aliases
 {:core
  {:extra-deps {github.cljctools.bittorrent/bencode {:local/root "../../src/bencode"}}}

  :cljc
  {:extra-deps {org.clojure/spec.alpha {:mvn/version "0.2.187"}
                org.clojure/core.async {:mvn/version "1.3.610"}}
   :override-deps {org.clojure/test.check {:mvn/version "1.0.0"}}}

  :jvm
  {:extra-deps {org.clojure/clojure {:mvn/version "1.10.3"}
                github.cljctools/core-jvm {:local/root "../../../cljctools/src/core-jvm"}
                github.cljctools/bytes-jvm {:local/root "../../../cljctools/src/bytes-jvm"}
                github.cljctools/codec-jvm {:local/root "../../../cljctools/src/codec-jvm"}}}

  :js
  {:extra-deps {org.clojure/clojurescript {:mvn/version "1.10.844"}
                github.cljctools/core-js {:local/root "../../../cljctools/src/core-js"}
                github.cljctools/bytes-js {:local/root "../../../cljctools/src/bytes-js"}
                github.cljctools/codec-js {:local/root "../../../cljctools/src/codec-js"}}}


  :jvm-test-runner
  {:extra-deps {github.cognitect-labs/test-runner {:git/url "https://github.com/cognitect-labs/test-runner"
                                                   :sha "b6b3193fcc42659d7e46ecd1884a228993441182"}}
   :main-opts ["-m" "cognitect.test-runner"]}

  :js-test-runner
  {:extra-deps {github.Olical/cljs-test-runner {:git/url "https://github.com/Olical/cljs-test-runner"
                                                :sha "a9cc21916f32fb6caa9f54e349e7cc32b199b0c2"
                                                :tag "v3.8.0"}}
   :main-opts ["-m" "cljs-test-runner.main"
               "-o" "js-test-runner-out"]}

  :repl
  {:extra-deps {github.cljctools/deps-repl {:git/url "https://github.com/cljctools/deps-repl"
                                            :sha "08283d3841c5948b0b9d36a977ebfdad111cdb2f"
                                            :tag "v2.0.1"}
                nrepl/nrepl {:mvn/version "0.8.3"}
                cider/cider-nrepl {:mvn/version "0.25.5"}}
   :main-opts ["-m" "lambdaisland.nrepl.main"
               "--port" "7788"
               "--bind" "0.0.0.0"
               "--middleware" "cider.nrepl/cider-middleware"]}}}